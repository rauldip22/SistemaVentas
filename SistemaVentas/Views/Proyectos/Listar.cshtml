@model IEnumerable<SistemaVentas.Models.Proyectos>

@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Importe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Porcentaje)
        </th>
        <th>
            Vendedor
            @*@Html.DisplayNameFor(model => model.Vendedores.Apellido)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)

        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.Importe)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Porcentaje)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vendedores.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdProyecto }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.IdProyecto }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.IdProyecto })
        </td>
    </tr>
}

</table>
